<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Light Theme -->

    <!-- Base Application Theme -->
    <style name="Base.Theme.SunrinPhoneBook" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <!-- Base Background -->
    <style name="BaseBackground" parent="Theme.Material3.Light">
    </style>

    <!-- Base Button -->
    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_base_button</item>

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <!-- Base Text -->
    <style name="BaseText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <!-- Base EditText -->
    <style name="BaseEditText">
        <item name="android:backgroundTint">@android:color/transparent</item>

        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">32dp</item>

        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <!-- Hint EditText -->
    <style name="HintEditText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_heavy</item>
        <item name="fontFamily">@font/pretendard_regular</item>
    </style>

    <!-- Helper EditText -->
    <style name="HelperEditText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <!-- Error EditText -->
    <style name="ErrorEditText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/pretendard_regular</item>
    </style>

    <!-- Base EditTextLayout -->
    <style name="BaseEditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/selector_edittext_layout</item>
        <item name="android:textColorHint">@color/gray_heavy</item>

        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/gray_medium</item>

        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/gray_heavy</item>
        <item name="hintTextAppearance">@style/HintEditText</item>

        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextAppearance">@style/HelperEditText</item>

        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="errorTextAppearance">@style/ErrorEditText</item>
    </style>

    <style name="Theme.SunrinPhoneBook" parent="Base.Theme.SunrinPhoneBook" />
</resources>